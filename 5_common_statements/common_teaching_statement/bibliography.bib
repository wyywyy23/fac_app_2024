  file      = {/Users/wyy/Library/CloudStorage/GoogleDrive-yw3831@columbia.edu/My Drive/Zotero/Novick et al_2023_High-bandwidth density silicon photonic resonators for energy-efficient optical2.pdf},
  issn      = {1931-9401},
  journal   = {Applied Physics Reviews},
  langid    = {english},
  month     = dec,
  number    = {4},
  pages     = {041306},
  title     = {High-Bandwidth Density Silicon Photonic Resonators for Energy-Efficient Optical Interconnects},
  urldate   = {2023-11-25},
  volume    = {10},
  year      = {2023}
