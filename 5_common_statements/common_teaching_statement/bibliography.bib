  issn      = {1943-0620, 1943-0639},
  journal   = {Journal of Optical Communications and Networking},
  langid    = {english},
  month     = feb,
  number    = {2},
  pages     = {A157},
  title     = {Flexible Silicon Photonic Architecture for Accelerating Distributed Deep Learning},
